<div class="home">
  <div class="container">
    <div class="home-content">
      <div class="hero">
        <h1 class="hero-title">欢迎来到我的博客</h1>
        <p class="hero-subtitle"><%= config.description %></p>
        <div class="hero-actions">
          <a href="#posts" class="btn btn-primary">开始阅读</a>
          <a href="/about" class="btn btn-secondary">关于我</a>
        </div>
      </div>
      
      <section id="posts" class="posts">
        <h2 class="section-title">最新文章</h2>
        <div class="post-list">
          <% page.posts.each(function(post) { %>
            <article class="post-item">
              <div class="post-meta">
                <time class="post-date">
                  <i class="far fa-calendar"></i>
                  <%= post.date.format('YYYY-MM-DD') %>
                </time>
                <% if (post.categories && post.categories.length) { %>
                  <span class="post-category">
                    <i class="far fa-folder"></i>
                    <%- list_categories(post.categories, {show_count: false, class: 'category-link'}) %>
                  </span>
                <% } %>
              </div>
              
              <h3 class="post-title">
                <a href="<%- url_for(post.path) %>"><%= post.title %></a>
              </h3>
              
              <div class="post-excerpt">
                <%- post.excerpt %>
              </div>
              
              <div class="post-tags">
                <% if (post.tags && post.tags.length) { %>
                  <%- list_tags(post.tags, {show_count: false, class: 'tag-link'}) %>
                <% } %>
              </div>
              
              <div class="post-more">
                <a href="<%- url_for(post.path) %>" class="read-more">阅读更多 <i class="fas fa-arrow-right"></i></a>
              </div>
            </article>
          <% }) %>
        </div>
        
        <!-- 分页 -->
        <%- partial('partial/pagination') %>
      </section>
    </div>
  </div>
</div>
