<!-- Butterfly 风格首页 -->
<div class="home">
  <!-- 顶部横幅 -->
  <% if (theme.index_img) { %>
    <div class="top-img" style="background-image: url('<%- url_for(theme.index_img) %>')">
      <div class="top-img-content">
        <h1 class="site-title"><%= config.title %></h1>
        <p class="site-subtitle"><%= config.subtitle || config.description %></p>
      </div>
    </div>
  <% } else { %>
    <div class="top-img default">
      <div class="top-img-content">
        <h1 class="site-title"><%= config.title %></h1>
        <p class="site-subtitle"><%= config.subtitle || config.description %></p>
      </div>
    </div>
  <% } %>

  <div class="container">
    <div class="home-content">
      <!-- 文章列表 -->
      <div class="posts">
        <% page.posts.each(function(post) { %>
          <article class="post-card">
            <!-- 文章封面 -->
            <% if (post.cover || post.top_img) { %>
              <div class="post-card-cover">
                <img src="<%- url_for(post.cover || post.top_img) %>" alt="<%= post.title %>">
                <div class="post-card-cover-overlay"></div>
              </div>
            <% } %>
            
            <div class="post-card-content">
              <!-- 文章标题 -->
              <h2 class="post-card-title">
                <a href="<%- url_for(post.path) %>"><%= post.title %></a>
              </h2>
              
              <!-- 文章摘要 -->
              <div class="post-card-excerpt">
                <%- post.excerpt || post.content.substring(0, 200) + '...' %>
              </div>
              
              <!-- 文章元信息 -->
              <div class="post-card-meta">
                <div class="post-card-date">
                  <i class="far fa-calendar"></i>
                  <time><%= post.date.format('YYYY-MM-DD') %></time>
                </div>
                
                <% if (post.tags && post.tags.length) { %>
                  <div class="post-card-tags">
                    <% post.tags.each(function(tag) { %>
                      <a href="<%- url_for(tag.path) %>" class="post-card-tag">
                        <i class="fas fa-tag"></i>
                        <%= tag.name %>
                      </a>
                    <% }) %>
                  </div>
                <% } %>
              </div>
            </div>
          </article>
        <% }) %>
      </div>
      
      <!-- 分页 -->
      <%- partial('partial/pagination') %>
    </div>
  </div>
</div>
