<!DOCTYPE html>
<html lang="<%= config.language %>">
<head>
  <%- partial('partial/head') %>
</head>
<body class="<%= theme.darkmode && theme.darkmode.enable ? 'dark' : 'light' %>">
  <%- partial('partial/header') %>
  
  <main class="main">
    <div class="main-container">
      <div class="main-content">
        <%- body %>
      </div>
      
      <!-- 侧边栏 -->
      <% if (theme.aside && theme.aside.enable && (!page.layout || page.layout !== 'post')) { %>
        <%- partial('partial/sidebar') %>
      <% } %>
    </div>
  </main>
  
  <%- partial('partial/footer') %>
  <%- partial('partial/scripts') %>
  
  <!-- 右下角按钮 -->
  <div class="rightside">
    <% if (theme.darkmode && theme.darkmode.enable && theme.darkmode.button) { %>
      <div class="rightside-item">
        <div class="darkmode-toggle" title="切换暗黑模式">
          <i class="fas fa-moon"></i>
        </div>
      </div>
    <% } %>
    
    <% if (theme.readmode) { %>
      <div class="rightside-item">
        <div class="readmode-toggle" title="阅读模式">
          <i class="fas fa-book-open"></i>
        </div>
      </div>
    <% } %>
    
    <div class="rightside-item">
      <a href="#" class="scroll-to-top" title="返回顶部">
        <i class="fas fa-arrow-up"></i>
      </a>
    </div>
  </div>
</body>
</html>
