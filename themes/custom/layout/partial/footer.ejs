<!-- 页脚 -->
<footer class="footer">
  <div class="container">
    <div class="footer-content">
      <!-- 网站信息 -->
      <div class="footer-info">
        <div class="footer-title">
          <h3><%= config.title %></h3>
          <p><%= config.description %></p>
        </div>
        
        <!-- 社交链接 -->
        <% if (theme.social) { %>
          <div class="footer-social">
            <% for (var i in theme.social) { %>
              <% var socialItem = theme.social[i]; %>
              <% var socialUrl = socialItem.split('||')[0].trim(); %>
              <% var socialText = socialItem.split('||')[1] ? socialItem.split('||')[1].trim() : ''; %>
              <% var socialColor = socialItem.split('||')[2] ? socialItem.split('||')[2].trim() : '#666'; %>
              <a href="<%= socialUrl %>" class="social-link" target="_blank" data-color="<%= socialColor %>">
                <i class="<%= i %>"></i>
                <span><%= socialText %></span>
              </a>
            <% } %>
          </div>
        <% } %>
      </div>

      <!-- 快速链接 -->
      <div class="footer-links">
        <h4>快速链接</h4>
        <ul class="footer-menu">
          <% if (theme.menu) { %>
            <% for (var i in theme.menu) { %>
              <% var menuItem = theme.menu[i]; %>
              <% var menuUrl = menuItem.split('||')[0].trim(); %>
              <li><a href="<%- url_for(menuUrl) %>"><%= i %></a></li>
            <% } %>
          <% } %>
        </ul>
      </div>

      <!-- 统计信息 -->
      <div class="footer-stats">
        <h4>网站统计</h4>
        <div class="stats-list">
          <% if (theme.busuanzi && theme.busuanzi.site_pv) { %>
            <div class="stat-item">
              <span class="stat-label">访问量:</span>
              <span class="stat-value" id="busuanzi_value_site_pv">-</span>
            </div>
          <% } %>
          <% if (theme.busuanzi && theme.busuanzi.site_uv) { %>
            <div class="stat-item">
              <span class="stat-label">访客数:</span>
              <span class="stat-value" id="busuanzi_value_site_uv">-</span>
            </div>
          <% } %>
          <div class="stat-item">
            <span class="stat-label">文章数:</span>
            <span class="stat-value"><%= site.posts.length %></span>
          </div>
        </div>
      </div>
    </div>

    <!-- 版权信息 -->
    <div class="footer-bottom">
      <div class="copyright">
        <p>
          © <%= new Date().getFullYear() %> 
          <% if (theme.footer && theme.footer.owner && theme.footer.owner.since) { %>
            <%= theme.footer.owner.since %>-<%= new Date().getFullYear() %>
          <% } %>
          <a href="<%- url_for('/') %>"><%= config.author %></a>
          <% if (theme.footer && theme.footer.copyright && theme.footer.copyright.enable) { %>
            | 基于 <a href="https://hexo.io" target="_blank">Hexo</a> 构建
            <% if (theme.footer.copyright.version) { %>
              | 主题版本: <%= theme.version %>
            <% } %>
          <% } %>
        </p>
        <% if (theme.footer && theme.footer.custom_text) { %>
          <p><%= theme.footer.custom_text %></p>
        <% } %>
      </div>
    </div>
  </div>
</footer>