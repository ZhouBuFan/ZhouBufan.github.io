<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<meta name="description" content="<%= config.description %>">
<meta name="keywords" content="<%= config.keywords %>">
<meta name="author" content="<%= config.author %>">

<!-- 主题颜色 -->
<meta name="theme-color" content="#49B1F5">

<!-- 网站图标 -->
<% if (theme.favicon) { %>
  <link rel="icon" href="<%- url_for(theme.favicon) %>" type="image/png">
<% } %>

<!-- 字体 -->
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">

<!-- Font Awesome -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

<!-- 自定义样式 -->
<link rel="stylesheet" href="<%- url_for('/css/style.css') %>">

<!-- RSS -->
<% if (theme.rss) { %>
  <link rel="alternate" type="application/rss+xml" title="<%= config.title %>" href="<%- url_for(theme.rss) %>">
<% } %>

<!-- 页面标题 -->
<title><%= page.title ? page.title + ' - ' + config.title : config.title %></title>

<!-- 结构化数据 -->
<% if (theme.structured_data) { %>
  <script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "Blog",
    "name": "<%= config.title %>",
    "description": "<%= config.description %>",
    "url": "<%= config.url %>",
    "author": {
      "@type": "Person",
      "name": "<%= config.author %>"
    }
  }
  </script>
<% } %>