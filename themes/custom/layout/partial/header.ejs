<!-- Butterfly 风格导航 -->
<header class="header" id="header">
  <div class="header-content">
    <!-- Logo -->
    <div class="logo">
      <a href="<%- url_for('/') %>">
        <% if (theme.nav && theme.nav.logo) { %>
          <img src="<%- url_for(theme.nav.logo) %>" alt="<%= config.title %>" class="logo-img">
        <% } %>
        <% if (theme.nav && theme.nav.display_title !== false) { %>
          <span class="logo-text"><%= config.title %></span>
        <% } %>
      </a>
    </div>
    
    <!-- 导航菜单 -->
    <nav class="nav">
      <ul class="nav-list">
        <% if (theme.menu) { %>
          <% for (var i in theme.menu) { %>
            <% var menuItem = theme.menu[i]; %>
            <% var menuText = i; %>
            <% var menuUrl = menuItem.split('||')[0].trim(); %>
            <% var menuIcon = menuItem.split('||')[1] ? menuItem.split('||')[1].trim() : ''; %>
            <li class="nav-item">
              <a href="<%- url_for(menuUrl) %>" class="nav-link">
                <% if (menuIcon) { %>
                  <i class="<%= menuIcon %>"></i>
                <% } %>
                <span><%= menuText %></span>
              </a>
            </li>
          <% } %>
        <% } %>
      </ul>
    </nav>
    
    <!-- 右侧操作 -->
    <div class="header-actions">
      <!-- 搜索按钮 -->
      <div class="search-toggle">
        <i class="fas fa-search"></i>
      </div>
      
      <!-- 暗黑模式切换 -->
      <% if (theme.darkmode && theme.darkmode.enable) { %>
        <div class="darkmode-toggle">
          <i class="fas fa-moon"></i>
        </div>
      <% } %>
      
      <!-- 移动端菜单按钮 -->
      <div class="mobile-menu-toggle">
        <i class="fas fa-bars"></i>
      </div>
    </div>
  </div>
</header>
