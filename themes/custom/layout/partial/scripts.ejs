<!-- JavaScript -->
<script src="<%- url_for('js/main.js') %>"></script>

<!-- 代码高亮 -->
<% if (theme.highlight.enable) { %>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/highlight.js/11.6.0/highlight.min.js"></script>
  <script>hljs.highlightAll();</script>
<% } %>

<!-- 数学公式 -->
<% if (theme.math.enable) { %>
  <script src="https://polyfill.io/v3/polyfill.min.js?features=es6"></script>
  <script id="MathJax-script" async src="https://cdn.jsdelivr.net/npm/mathjax@3/es5/tex-mml-chtml.js"></script>
  <script>
    window.MathJax = {
      tex: {
        inlineMath: [['$', '$'], ['\\(', '\\)']],
        displayMath: [['$$', '$$'], ['\\[', '\\]']]
      }
    };
  </script>
<% } %>

<!-- 统计代码 -->
<% if (theme.analytics.enable) { %>
  <% if (theme.analytics.google) { %>
    <script async src="https://www.googletagmanager.com/gtag/js?id=<%= theme.analytics.google %>"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', '<%= theme.analytics.google %>');
    </script>
  <% } %>
<% } %>
